collector {
  interface = 0.0.0.1
  port = 12345

  streams {
    good = "good"
    bad = "bad"
    useIpAddressAsPartitionKey = true

    sink {
      brokers = "broker:9092"
    }
  }
}

akka {
  loglevel = DEBUG
  loggers = ["akka.event.slf4j.Slf4jLogger"]

  http.server {
    remote-address-header = on
    raw-request-uri-header = on

    parsing {
      max-uri-length = 32768
      uri-parsing-mode = relaxed
    }
  }
}
